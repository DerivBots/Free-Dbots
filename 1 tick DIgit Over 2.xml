<bot>
  <trade-options>
    <market>Forex</market>
    <symbol>R_100</symbol>
    <contract_type>CALL</contract_type>
    <duration>5</duration>
    <duration_unit>t</duration_unit>
    <stake>1</stake>
  </trade-options>

  <indicators>
    <rsi>
      <input_data>Close</input_data>
      <period>14</period>
    </rsi>
    <macd>
      <input_data>Close</input_data>
      <fast_ema_period>12</fast_ema_period>
      <slow_ema_period>26</slow_ema_period>
      <signal_period>9</signal_period>
    </macd>
  </indicators>

  <conditions>
    <condition>
      <rsi>
        <comparison>less</comparison>
        <value>30</value>
      </rsi>
      <macd>
        <cross>macd_above_signal</cross>
      </macd>
      <action>CALL</action>
    </condition>

    <condition>
      <rsi>
        <comparison>greater</comparison>
        <value>70</value>
      </rsi>
      <macd>
        <cross>macd_below_signal</cross>
      </macd>
      <action>PUT</action>
    </condition>
  </conditions>

  <martingale>
    <enabled>false</enabled>
  </martingale>

  <logic>
    <entry_condition>Both indicators must confirm</entry_condition>
  </logic>
</bot>
